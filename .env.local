# Docker runtime (uncomment ONE based on your setup)
# For Colima:
# DOCKER_HOST=unix://${HOME}/.colima/default/docker.sock
# For Docker Desktop: (default, no need to set)
# DOCKER_HOST=unix:///var/run/docker.sock

MYSQL_HOST=mysql
MYSQL_USER=user
MYSQL_PASSWORD=pass
MYSQL_DATABASE=mydb
MYSQL_ROOT_PASSWORD=root
MYSQL_PORT=3306
REDIS_PORT=6379
REDIS_HOST=redis
REDIS_DB=0
PHPMYADMIN_PORT=8082
DATABASE_URL=mysql://${MYSQL_USER}:${MYSQL_PASSWORD}@127.0.0.1:${MYSQL_PORT}/${MYSQL_DATABASE}
USER_API_PORT=3333
RUST_LOG=debug
ENV=local
ELASTIC_HOST=elasticsearch
ELASTIC_PORT=9200
ELASTIC_URL=http://${ELASTIC_HOST}:${ELASTIC_PORT}

# Middleware Configuration (user-api)
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=150
REQUEST_TIMEOUT_SECS=30
CORS_ALLOWED_ORIGINS=*
MAX_BODY_SIZE_BYTES=1048576
SHUTDOWN_TIMEOUT_SECS=30
# IP_ALLOWLIST=              # optional, comma-separated valid IPs
# IP_BLOCKLIST=              # optional, comma-separated valid IPs

# Database Pool Configuration
# DB_MAX_CONNECTIONS=10      # maximum connections in pool
# DB_MIN_CONNECTIONS=1       # minimum connections to maintain
# DB_ACQUIRE_TIMEOUT_SECS=5  # connection acquire timeout
# DB_IDLE_TIMEOUT_SECS=600   # idle connection timeout (10 min)
# DB_MAX_LIFETIME_SECS=1800  # max connection lifetime (30 min)

# Cache Configuration
CACHE_ENABLED=true
CACHE_USER_TTL_SECS=300
CACHE_ROLE_TTL_SECS=600
CACHE_LIST_TTL_SECS=60
